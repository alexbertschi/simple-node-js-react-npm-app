pipeline {
     agent {
        any {
            image 'node:6-alpine'
            args '-p 3000:3000'
        }
    }
    environment {
        CI = 'true'
    }
    stages {
        stage('Build') {
            steps {
                bat 'npm install'
            }
        }
        stage('Test') {
            steps {
                bat 'cd ./jenkins/scripts'
                bat 'test.sh'
            }
        }
        stage('Deliver') {
            steps {
                bat 'deliver.sh'
                input message: 'Finished using the web site? (Click "Proceed" to continue)'
                bat 'kill.sh'
            }
        }
    }
}
