pipeline {
     agent {
        any {
            image 'node:6-alpine'
            args '-p 3000:3000'
        }
    }
    environment {
        CI = 'true'
    }
    stages {
        stage('Build') {
            steps {
                shell 'npm install'
            }
        }
        stage('Test') {
            steps {
                shell './jenkins/scripts/test.sh'
            }
        }
        stage('Deliver') {
            steps {
                shell './jenkins/scripts/deliver.sh'
                input message: 'Finished using the web site? (Click "Proceed" to continue)'
                shell './jenkins/scripts/kill.sh'
            }
        }
    }
}
